<% if @slot.present? %>
  <% if @slot.errors.any? %>
    <% @slot.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new slot
</h1>


<hr>

<form action="/create_slot" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" id="date" name="date" class="form-control" value="<%= @slot.date %>">
  </div>

  <div class="form-group">
    <label for="start_time">
      Start time
    </label>

    <input type="text" id="start_time" name="start_time" class="form-control" value="<%= @slot.start_time %>">
  </div>

  <div class="form-group">
    <label for="end_time">
      End time
    </label>

    <input type="text" id="end_time" name="end_time" class="form-control" value="<%= @slot.end_time %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create slot
  </button>
</form>

<hr>

<a href="/slots">
  Go back
</a>
